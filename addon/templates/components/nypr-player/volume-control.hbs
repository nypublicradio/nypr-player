<div class="nypr-player-volume-control" tabindex="0" aria-label="Volume">
  <div class="nypr-player-volume-slider-wrapper">
    <div class="js-volume-slider nypr-player-volume-slider">
      <div class="nypr-player-volume-slider-track" style={{trackWidth}}></div>
      <div class="js-volume-slider-handle nypr-player-volume-slider-handle" style={{handlePosition}}></div>
    </div>
  </div>
  <button class="nypr-player-button mod-volume" {{action 'toggleMute'}}>
    <label class="u-visuallyhidden" id="playpause-label">Toggle Mute</label>
    {{nypr-svg className="nypr-player-icon mod-volume-unmuted" icon="volume"}}
    {{nypr-svg className="nypr-player-icon mod-volume-muted" icon="mute"}}
  </button>
</div>
